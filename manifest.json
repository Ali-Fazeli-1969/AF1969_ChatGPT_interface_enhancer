{
	"name": "ChatGPT minimal interface",
	"version": "1.0",
	"manifest_version": 3,
	"browser_specific_settings": {
		"gecko": {
			"id": "noemail@nodomain.com"
		}
	},
	"permissions": ["tabs", "scripting"],
	"host_permissions": [
		"*://chatgpt.com/*",
		"*://chat.openai.com/*"
	],
	"background": {
		"scripts": ["bg.js"]
	},
	"action": {
		"default_popup": "popup.html"
	}
}
